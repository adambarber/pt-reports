!!! 5
%html
  %head
    %script{src: "/jquery.js"}
    %script{src: "/bootstrap.js" }

    %link{:href=>'/bootstrap.min.css', :rel=>'stylesheet', :type=>'text/css'}
    %link{:href=>'/styles.css', :rel=>'stylesheet', :type=>'text/css'}
    %title=@title
  %body
    .navbar
      .navbar-inner
        .container
          %a.brand Pivotal Tracker Status
          %ul.nav.pull-right
            %li
              %a{:href=>"/#{params[:projects]}/#{params[:api_key]}", :title=>"Show activity from #{@start_date} to now"} Last Week's Progress
            %li
              %a{:href=>"/status/#{params[:projects]}/#{params[:api_key]}"} Project Status
            %li
              %a{:href=>"/features/#{params[:projects]}/#{params[:api_key]}"} Features
            %li
              %a{:href=>"/team/#{params[:projects]}/#{params[:api_key]}"} Team Progress
    .container
      .row
        .span12
          =yield

